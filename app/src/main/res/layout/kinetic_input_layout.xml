<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#191E22">

    <EditText
        android:id="@+id/edt_kinetic_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName|textMultiLine"
        android:scrollHorizontally="false"
        android:padding="20dp"
        android:hint="Type Your Text"
        android:gravity="center"
        android:textColor="#FFF"
        android:textColorHint="#55FFFFFF"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:background="#00000000"
        android:layout_above="@+id/btn_done" />

    <Button
        android:id="@+id/btn_done"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Done"
        android:textColor="#FFF"
        android:layout_alignParentBottom="true"
        android:background="@drawable/btn_background"
        android:layout_alignParentEnd="true"
        android:layout_margin="10dp"/>

    <TextView
        android:id="@+id/txt_fonts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textStyle="bold"
        android:text="Font"
        android:layout_margin="10dp"
        android:textColor="#FFF"
        android:layout_below="@+id/edt_kinetic_input"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/img_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/txt_fonts"
        android:layout_toEndOf="@+id/txt_fonts"
        android:padding="7dp"
        app:srcCompat="@drawable/ic_color_changer"
        android:layout_alignBottom="@+id/txt_fonts" />

</RelativeLayout>