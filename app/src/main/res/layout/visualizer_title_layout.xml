<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#212121">

    <EditText
        android:id="@+id/edt_visualizer_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName|textMultiLine"
        android:scrollHorizontally="false"
        android:padding="20dp"
        android:hint="Type Your Text"
        android:gravity="center"
        android:textColor="#FFF"
        android:textColorHint="#55FFFFFF"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:background="#00000000"
        android:layout_above="@+id/btn_visualizer_next" />

    <TextView
        android:id="@+id/txt_visualizer_fonts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="18dp"
        android:layout_marginStart="18dp"
        android:textStyle="bold"
        android:textColor="#FFF"
        android:text="Font"
        android:gravity="center"
        android:textSize="15sp"
        android:layout_alignTop="@+id/btn_visualizer_next" />

    <Button
        android:id="@+id/btn_visualizer_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:background="@drawable/btn_background"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="18dp"
        android:textColor="#FFF"/>
</RelativeLayout>